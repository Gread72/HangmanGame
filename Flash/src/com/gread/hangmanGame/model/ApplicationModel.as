/*class ApplicationModelApplication model for Hangman game	*/package com.gread.hangmanGame.model {		public class ApplicationModel {		//array of game words that could be used		private var _wordsArray:Array = ["DOGS", "ENVELOPES", "DEVELOPER", "LOVE"];				//private var _selectedIndexArray:Array = new Array();		private var _selectedWord:String;				private var _correctLettersCount:Number = 0;				// static variables for status message		public static var STATUS_GAME_OVER_LOSE:String = "HANGMAN GAME ENDED - YOU ARE DEAD";		public static var STATUS_GAME_OVER_WIN:String = "HANGMAN GAME ENDED - YOU ARE ALIVE. YOU WON.";		public static var STATUS_GAME_START:String = "HANGMAN GAME STARTED";				public function ApplicationModel() { 			// get random word			var selectedIndex:Number = Math.round((Math.random() * 3));			_selectedWord =  _wordsArray[selectedIndex];		}				public function get selectedWord():String{			return _selectedWord;		}				public function get correctLettersCount():Number{			return _correctLettersCount;		}				public function set correctLettersCount(value:Number):void{			_correctLettersCount = value;		}	}	}