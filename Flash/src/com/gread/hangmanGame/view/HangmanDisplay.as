/*class HangmanDisplayDisplay of hangman	*/package com.gread.hangmanGame.view {	import flash.display.Sprite;	import flash.events.Event;		public class HangmanDisplay extends Sprite{				// components of hamg man		private var _topHangingPole:TopHangingPole;		private var _middleHangingPole:MiddleHangingPole;		private var _bottomHangingPole:BottomHangingPole;				private var _head:Head;				private var _leftArm:LineElement;		private var _rightArm:LineElement;				private var _body:LineElement;				private var _leftLeg:LineElement;		private var _rightLeg:LineElement;				private var _currentPartNum:Number = 0;				public static var HANGMAN_COMPLETE:String = "HANGMAN_COMPLETE";				public function HangmanDisplay() {			init();		}				private function init():void{			// create instances of hangman elements			_topHangingPole = topHangingPole;			_middleHangingPole = middleHangingPole;			_bottomHangingPole = bottomHangingPole;						_head = head;						_leftArm = leftArm;			_rightArm = rightArm;						_body = body;						_leftLeg = leftLeg;			_rightLeg = rightLeg;						reset();		}						public function addPart():void{			// add element part - display 			switch(_currentPartNum){				case 0:					_topHangingPole.alpha = 1;				break;								case 1:					_middleHangingPole.alpha = 1;				break;								case 2:					_bottomHangingPole.alpha = 1;				break;								case 3:					_leftArm.alpha = 1;				break;								case 4:					_rightArm.alpha = 1;				break;								case 5:					_rightLeg.alpha = 1;				break;								case 6:					_leftLeg.alpha = 1;				break;								case 7:					_body.alpha = 1;				break;								case 8:					_head.alpha = 1;					dispatchEvent(new Event("HANGMAN_COMPLETE") );				break;			}			_currentPartNum++;		}				private function reset():void{			// reset elements			_topHangingPole.alpha = 0;			_middleHangingPole.alpha = 0;			_bottomHangingPole.alpha = 0;						_head.alpha = 0;						_leftArm.alpha = 0;			_rightArm.alpha = 0;						_body.alpha = 0;						_leftLeg.alpha = 0;			_rightLeg.alpha = 0;						_currentPartNum = 0;		}	}	}